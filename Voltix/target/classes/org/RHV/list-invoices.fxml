<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.RHV.controller.ListInvoicesController"
      alignment="CENTER"
      spacing="20"
      styleClass="form-container"
      fillWidth="true"
      prefHeight="500">

    <Label text="Invoices" styleClass="form-title"/>

    <TableView fx:id="tableInvoices"
               prefHeight="380"
               VBox.vgrow="ALWAYS"
               styleClass="table-view">

        <columns>
            <TableColumn fx:id="colCustomer" text="Customer" prefWidth="180"/>
            <TableColumn fx:id="colPeriod" text="Period" prefWidth="200"/>
            <TableColumn fx:id="colKwh" text="kWh" prefWidth="120"/>
            <TableColumn fx:id="colTotal" text="Total" prefWidth="150"/>
        </columns>

    </TableView>
</VBox>
